<p>
  <%= f.label :username %><br />
  <%= f.select :username, User.find(:all, :order => 'sn').map { |u| [ "#{[u.sn,u.given_name].join(' ')} (#{u.username})", u.username] } %>
</p>

<p>
  <%= f.label :parent_id %> (ID=<%= @administrator.parent_id  %>)<br />
  <%= f.select :parent_id, 
	         Administrator.find(:all, :order => 'username').map { |u| 
		         [ "#{u.username}", u.id ] 
		       }.inject( [['--root--',0]] ) { |original,obj| original << obj }
	%>
</p>

<p>
  <%= f.label :max_clients %> (<%= _('0 for unlimited') %>)<br />
  <%= f.text_field :max_clients, :size => 5 %>
</p>

<p>
  <%= f.label :billing_address %><br />
  <%= f.text_area :billing_address, :rows => 8, :cols => 50 %>
</p>

<p>
  <%= f.label :description %><br />
  <%= f.text_area :description, :rows => 5, :cols => 50 %>
</p>

<p>
  <%= f.submit "Save" %>
</p>